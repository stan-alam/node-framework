{
    "id" : "1906",
    "name" : "Error Reporting Service",
    "testCases" : [
      {
        "testCaseId": 1,
        "name" : "Verify Insert of Error Service (Info)",
        "steps": [
          {
            "id": 1,
            "type": "error-reporting-service",
            "params": {
              "action": "sendErrorMessage"
            },
            "tests":[
              {
                "action": "equal",
                "value": 201,
                "location": "statusCode"
              },
              {
                "action": "isObject",
                "location": "body"
              }
            ]
          }
        ]
      },
      {
        "testCaseId": 2,
        "name" : "Verify Insert of Error Service (Warning)",
        "steps": [
          {
            "id": 1,
            "type": "error-reporting-service",
            "params": {
              "action": "sendErrorMessage",
              "updateModel": {
                "model": "errors",
                "attributes": {
                  "severity":"Warning",
                  "description":"This is description for Warning",
                  "details":"This is a more info on the Warning"
                }
              }
            },
            "tests":[
              {
                "action": "equal",
                "value": 201,
                "location": "statusCode"
              },
              {
                "action": "isObject",
                "location": "body"
              }
            ]
          }
        ]
      },
