{
    "id": "1497",
    "name": "Navigation between Queue and Archive",
    "testCases": [
    {
        "testCaseId": 1,
        "name": "Queued Messages and Archived Messages Tabs on Dashboard",
        "steps": [
        {
            "id": 1,
            "type": "hub-admin-ui",
            "params":
            {
                "action": "urllocation",
                "location": "/#/dashboard"
            }
        },
        {
            "id": 2,
            "type": "hub-admin-ui",
            "params":
            {
                "action": "click",
                "element": "publishedMessages"
            }
        },
        {
            "id": 3,
            "type": "hub-admin-ui",
            "params":
            {
                "action": "elementView",
                "element": "tabQueueHtml"
            },
            "tests": [
            {
                "action": "include",
                "value": "Queued"
            }]
        },
        {
            "id": 4,
            "type": "hub-admin-ui",
            "params":
            {
                "action": "elementView",
                "element": "tabArchiveHtml"
            },
            "tests": [
            {
                "action": "include",
                "value": "Archive"
            }]
        }]
    },
    {
        "testCaseId": 2,
        "name": "Setup Pub and Sub Applications",
        "steps": [
        {
            "id": 1,
            "type": "hub-configuration-api",
            "params":
            {
                "action": "deleteApplications",
                "applications": ["applicationPub", "applicationSub"]
            }
        },
        {
            "id": 2,
            "type": "hub-configuration-api",
            "params":
            {
                "action": "createApplications",
                "applications": ["applicationPub", "applicationSub"]
            }
        },
        {
            "id": 3,
            "type": "hub-configuration-api",
            "params":
            {
                "action": "addResource",
                "application": "applicationPub",
                "resources": "subjects"
            }
        },
        {
            "id": 4,
            "type": "hub-configuration-api",
            "params":
            {
                "action": "addSubscription",
                "application": "applicationSub",
                "subscriptions": "subjects"
            }
        }]
    },
    {
        "testCaseId": 3,
        "name": "Push Messages into Hub",
        "steps": [
        {
            "id": 1,
            "type": "hub-publish-api",
            "params":
            {
                "action": "sendChangeNotifications",
                "messageCount": 50,
                "application": "applicationPub",
                "resource": "subjects"
            }
        }]
    },
    {
        "testCaseId": 4,
        "name": "Consume Messages from Hub",
        "steps": [
        {
            "id": 1,
            "type": "hub-message-queue-service",
            "params":
            {
                "action": "consumeChangeNotifications",
                "messageCounts": [10, 10, 0, 0, 0],
                "application": "applicationSub"
            }
        }]
    },
    {
        "testCaseId": 5,
        "name": "Validate Messages are displaying in Queue Tab",
        "steps": [
        {
            "id": 1,
            "type": "hub-admin-ui",
            "params":
            {
                "action": "urllocation",
                "location": "/#/dashboard"
            }
        },
        {
            "id": 2,
            "type": "hub-admin-ui",
            "params":
            {
                "action": "click",
                "element": "publishedMessages"
            }
        },
        {
            "id": 3,
            "type": "hub-admin-ui",
            "params":
            {
                "action": "elementView",
                "element": "historyRowOneStatus"
            },
            "tests": [
            {
                "action": "oneOf",
                "caseSensitive": false,
                "value": ["waiting", "retrieved"]
            }]
        }]
    },
    {
        "testCaseId": 6,
        "name": "Validate Messages are displaying in Archive Tab",
        "steps": [
        {
            "id": 1,
            "type": "hub-admin-ui",
            "params":
            {
                "action": "urllocation",
                "location": "/#/dashboard"
            }
        },
        {
            "id": 2,
            "type": "hub-admin-ui",
            "params":
            {
                "action": "click",
                "element": "publishedMessages"
            }
        },
        {
            "id": 3,
            "type": "hub-admin-ui",
            "params":
            {
                "action": "click",
                "element": "tabArchiveHtml"
            }
        },
        {
            "id": 4,
            "type": "hub-admin-ui",
            "params":
            {
                "action": "click",
                "element": "tabArchiveHtml"

            }
        },
        {
            "id": 5,
            "type": "hub-admin-ui",
            "params":
            {
                "action": "elementView",
                "element": "archiveHistoryRowOneStatus"
            },
            "tests": [
            {
                "action": "oneOf",
                "caseSensitive": false,
                "value": ["confirmed", "unconfirmed"]
            }]
        }]
    },
    {
        "testCaseId": 7,
        "name": "Aggregate Stats Waiting Navigation",
        "steps": [
        {
            "id": 1,
            "type": "hub-admin-ui",
            "params":
            {
                "action": "urllocation",
                "location": "/#/dashboard"
            }
        },
        {
            "id": 2,
            "type": "hub-admin-ui",
            "params":
            {
                "action": "click",
                "element": "firstRow",
                "elementTemplate": "Waiting"
            }
        },
        {
            "id": 3,
            "type": "hub-admin-ui",
            "params":
            {
                "action": "elementView",
                "element": "findElementTextByTemplate",
                "elementTemplate": "WAITING"
            },
            "tests": [
            {
                "action": "equal",
                "caseSensitive": false,
                "value": "waiting"
            }]
        }]
    },
