            "params": {
                "action": "deleteApplications",
                "applications": ["applicationPub", "applicationSub"]
            }
        }, {
            "id": 2,
            "method": "addApplications",
            "type": "hub-configuration-api",
            "params": {
                "action": "createApplications",
